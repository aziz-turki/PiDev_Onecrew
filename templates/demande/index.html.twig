
{% extends 'back.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdDemande</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cv</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.idDemande }}</td>
                <td>{{ demande.nomDemande }}</td>
                <td>{{ demande.prenomDemande }}</td>
                <td>{{ demande.cvDemande }}</td>
                <td>{{ demande.descriptionDemande }}</td>
                <td>
                    <a href="{{ path('app_demande_show', {'idDemande': demande.idDemande}) }}">show</a>
                    <a href="{{ path('app_demande_edit', {'idDemande': demande.idDemande}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demande_new') }}">Create new</a>
{% endblock %}