{% extends 'layoutBackOffice.html.twig' %}

{% block title %}Liste Evenement{% endblock %}

{% block body %}
    <h1>Liste Evenement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdEvenement</th>
                <th>ImageEvenement</th>
                <th>TypeEvenement</th>
                <th>NomEvenement</th>
                <th>LieuEvenement</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvenement }}</td>
                <td>
                <img src= {{asset('uploades/' ~ evenement.imageEvenement)}} width="100x" />
                </td>
                <td>{{ evenement.typeEvenement }}</td>
                <td>{{ evenement.nomEvenement }}</td>
                <td>{{ evenement.lieuEvenement }}</td>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idEvenement': evenement.idEvenement}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'idEvenement': evenement.idEvenement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
